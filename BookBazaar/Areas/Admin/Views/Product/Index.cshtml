@model List<Product>

<div class="container my-4 py-2">
    <div class="row mb-3">
        <div class="col-6">
            <h2> Display Product</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square mx-1"></i> Create Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td> Title</td>
                <td> ISBN</td>
                <td> Author</td>
                <td> Price</td>
                <td> Category</td>


                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.ListPrice))
            {
                <tr>
                    <td> @obj.Title</td>
                    <td> @obj.ISBN</td>
                    <td> @obj.Author</td>
                    <td> @obj.Price</td>

                    <td> </td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1">
                                Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>