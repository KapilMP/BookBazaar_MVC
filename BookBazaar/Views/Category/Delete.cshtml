@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white"> Update Category</h2>
            </div>
        </div>

    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="Id" hidden />

            <div class="border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating py-3 mb-2">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"> </label>
                    @* <span asp-validation-for="Name" class="text-danger"></span> *@

                </div>
                <div class="form-floating py-3 mb-2">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"> </label>
                    @* <span asp-validation-for="DisplayOrder" class="text-danger"></span> *@

                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control bg-gradient">
                            Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* client side validation which is realted to script so we create new section of script *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

