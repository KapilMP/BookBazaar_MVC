@model List<Category>

    <div class="container mt-4 py-2">
        <div class="row mb-3">
            <div class="col-6">
                <h2> Display Category</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square mx-1"></i> Create Category
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td> Name</td>
                    <td> Display Order</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model.OrderBy(u => u.DisplayOrder)){
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td><div class="btn-group w-75" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1">
                                Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-1">
                           Delete
                        </a>
                        </div>
                    </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>